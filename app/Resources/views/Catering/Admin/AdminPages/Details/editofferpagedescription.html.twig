{% extends "Catering/Admin/adminindex.html.twig" %}
{% block userdata %}
    <div class="admin-offerpage-container">
        <div class="desc-container">
            {{ form_start(form) }}
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>
            {{ form_widget(form.submit, {"attr": {"class": "button", "style": "float:left; margin-right:10px"}}) }}
            {{ form_end(form) }}
            {{ form_start(backbutton) }}
            {{ form_widget(backbutton.submit, {"attr": {"class": "button", "style": "float:left"}}) }}
            {{ form_end(backbutton) }}
    </div>
{% endblock %}