{% extends "Catering/Admin/adminindex.html.twig" %}
{% block userdata %}
<div class="userprofile-form-container">
    {{ form_start(form) }}
    <div class="left-container">
        {{ form_label(form.username) }}
        {{ form_widget(form.username) }}
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="right-container">
        {{ form_label(form.phonenumber) }}
        {{ form_widget(form.phonenumber) }}
        {{ form_label(form.surname) }}
        {{ form_widget(form.surname) }}
        {{ form_label(form.rankid) }}
        {{ form_widget(form.rankid) }}
    </div>
    <div class="clear-both"></div>

    {{ form_widget(form.submit, {"attr": {"style": "display:inline-block; margin:20px auto 0px auto", "class": "button"}}) }}
    {{ form_end(form) }}
</div>
{% endblock %}